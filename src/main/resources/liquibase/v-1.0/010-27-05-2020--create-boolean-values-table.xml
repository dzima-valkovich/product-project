<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="010-27-05-2020--create-boolean-values-table" author="dima.volkovitch@yandex.by" runOnChange="true">
        <createTable tableName="ia_boolean_values">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="value" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="id"
                                 baseTableName="ia_boolean_values"
                                 constraintName="fk_boolean_values_attributes"
                                 referencedColumnNames="id"
                                 referencedTableName="ia_attributes"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"/>
    </changeSet>
</databaseChangeLog>